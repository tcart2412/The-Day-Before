<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnItem"
        style="@style/btn_noShadow"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/items_btn_shape" />

    <ImageView
        android:id="@+id/imageView_checkBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/no_checked"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/item_imageView"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:src="@drawable/check"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textView_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="38dp"
        android:theme="@style/TextAppearance3"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:textColor="#E893969A"/>

    <TextView
        android:id="@+id/textView_dateNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/TextAppearance3"
        android:text="D-34"
        android:textStyle="bold"
        android:layout_marginLeft="250dp"
        android:layout_centerVertical="true"/>



</RelativeLayout>